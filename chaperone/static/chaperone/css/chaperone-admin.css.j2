html {
  position: relative;
  min-height: 100%;
}

body {
  font-family: "Helvetica Neue", sans-serif;
  height: 100%;
  overflow: auto;
  color: #333333;
  /* Get rid of space between child inline-block divs */
  /* NOTE: Need to reset font-size for all direct child elements */
  font-size: 0;
}

label {
  font-weight: normal;
}

a,
a:focus,
a:active {
  color: #003D79;
  text-decoration: none;
}

a:hover {
  color: #003D79;
  text-decoration: underline;
}

